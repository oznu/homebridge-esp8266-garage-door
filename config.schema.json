{
  "pluginAlias": "Esp8266GarageDoorController",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Garage Door"
      },
      "username": {
        "title": "Device Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Device Password",
        "type": "string",
        "required": true
      },
      "contactTime": {
        "title": "Contact Time (ms)",
        "description": "The time in ms that the relay should contact to trigger the garage contacts for.",
        "type": "number",
        "required": true,
        "default": 1000
      },
      "reverseObstructionSensor": {
        "title": "Reverse Obstruction Sensor",
        "description": "Set the obstruction sensor to be NC instead of NO.",
        "type": "boolean"
      }
    }
  }
}